<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Título que aparece en la pestaña del navegador -->
    <title>Sistema de Voto Electrónico Seguro</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaVotoMVC.styles.css" asp-append-version="true" />
    <!-- Esto sirve para poder usar iconos bonitos -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<!-- Esto ayuda a que la página se vea ordenada y el pie de página quede abajo -->
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom mb-3">
            <div class="container-fluid">
                <!-- Nombre del sistema que se ve arriba con un icono -->
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-check2-square"></i> Sistema de Voto Electrónico
                </a>
                <!-- Botón que aparece en pantallas pequeñas -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Botón para ir al inicio -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
                                Inicio
                            </a>
                        </li>
                        <!-- Opción para entrar al módulo de elecciones -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Elecciones" asp-action="Index">
                                Elecciones
                            </a>
                        </li>
                        <!-- Página de información del sistema -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">
                                Privacidad
                            </a>
                        </li>
                    </ul>
                    <!-- Botón acceder y navegación -->
                    <div class="d-flex">
                        <a class="btn btn-primary" style="border-radius: 20px;"
                           asp-controller="Home"
                           asp-action="Acceder">
                            Acceder
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Aquí se muestra el contenido de cada página -->
    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Parte de abajo de la página -->
    <footer class="border-top bg-light mt-auto">
        <div class="container py-3 text-center">
            &copy; 2026 - Sistema de Voto Electrónico -
            <!-- Mensaje que indica que el sistema es seguro -->
            <span class="badge bg-success">
                <i class="bi bi-shield-lock"></i> Conexión segura
            </span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Espacio para agregar scripts solo cuando una página los necesite -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>