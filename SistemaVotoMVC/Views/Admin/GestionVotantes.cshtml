@model IEnumerable<SistemaVotoModelos.Votante>

@{
    ViewData["Title"] = "Gestión de Usuarios";
    var juntas = ViewBag.Juntas as List<SistemaVotoModelos.DTOs.JuntaDetalleDto>
        ?? new List<SistemaVotoModelos.DTOs.JuntaDetalleDto>();
}

<div class="container mt-4">

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorJuntas"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["ErrorJuntas"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h4 class="fw-bold mb-0">👥 Gestión de Usuarios</h4>
            <small class="text-muted">Administración del padrón electoral</small>
        </div>

        <div class="d-flex gap-2">
            <a asp-action="Main" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver a Main
            </a>

            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalNuevo">
                <i class="bi bi-plus-circle"></i> Registrar Nuevo
            </button>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">

            <div class="row g-2 mb-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
                        <input id="buscador" class="form-control" placeholder="Buscar por cédula o nombre..." onkeyup="filtrarTabla()" />
                    </div>
                </div>

                <div class="col-md-6 text-md-end">
                    <span class="text-muted small">
                        Total: <strong>@(Model?.Count() ?? 0)</strong> usuarios
                    </span>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle" id="tablaUsuarios">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 140px;">Cédula</th>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th style="width: 130px;">Rol</th>
                            <th style="width: 150px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var v in Model)
                        {
                            <tr class="fila-usuario">
                                <td class="col-cedula">@v.Cedula</td>
                                <td class="col-nombre">@v.NombreCompleto</td>
                                <td>@v.Email</td>
                                <td>
                                    @if (v.RolId == 1)
                                    {
                                        <span class="badge bg-danger">Admin</span>
                                    }
                                    else if (v.RolId == 3)
                                    {
                                        <span class="badge bg-warning text-dark">Jefe Junta</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">Votante</span>
                                    }
                                </td>

                                <td class="d-flex gap-2">
                                    <button type="button"
                                            class="btn btn-sm btn-outline-info"
                                            onclick="abrirEditar(
                                                            '@v.Cedula',
                                                            '@(v.NombreCompleto ?? "")',
                                                            '@(v.Email ?? "")',
                                                            '@v.RolId',
                                                            '@(v.JuntaId?.ToString() ?? "")',
                                                            '@(v.FotoUrl ?? "")'
                                                        )">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>

                                    <form asp-action="EliminarVotante" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="cedula" value="@v.Cedula" />
                                        <button type="submit"
                                                class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('¿Eliminar a @v.NombreCompleto?')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

<!-- MODAL NUEVO -->
<div class="modal fade" id="modalNuevo" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-action="CrearVotante" method="post" class="modal-content shadow border-0">
            @Html.AntiForgeryToken()

            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Nuevo Usuario</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <label class="fw-bold">Rol</label>
                <select name="RolId" class="form-select mb-3" onchange="togglePassword(this.value)">
                    <option value="2">Votante (Ciudadano)</option>
                    <option value="3">Jefe de Junta</option>
                    <option value="1">Administrador</option>
                </select>

                <label class="fw-bold">Cédula</label>
                <input name="Cedula" class="form-control mb-3" required maxlength="10" />

                <label class="fw-bold">Nombre Completo</label>
                <input name="NombreCompleto" class="form-control mb-3" required />

                <label class="fw-bold">Email</label>
                <input name="Email" type="email" class="form-control mb-3" required />

                <label class="fw-bold">Junta (opcional)</label>
                <select name="JuntaId" class="form-select mb-3">
                    <option value="">Sin asignar</option>
                    @foreach (var j in juntas.OrderBy(x => x.Id))
                    {
                        <option value="@j.Id">
                            Junta @j.Id - Mesa @j.NumeroMesa - @j.Ubicacion
                        </option>
                    }
                </select>

                <label class="fw-bold">Foto URL (opcional)</label>
                <input name="FotoUrl" class="form-control mb-3" placeholder="https://..." />

                <label class="fw-bold">Contraseña</label>
                <input name="Password" id="passInput" type="password"
                       class="form-control" placeholder="Solo Admin / Jefe Junta" disabled />
                <small class="text-muted">Para Rol 2 (votante) no se requiere contraseña.</small>
            </div>

            <div class="modal-footer">
                <button type="submit" class="btn btn-primary w-100">Guardar</button>
            </div>
        </form>
    </div>
</div>

<!-- MODAL EDITAR -->
<div class="modal fade" id="modalEditar" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-action="EditarVotante" method="post" class="modal-content shadow border-0">
            @Html.AntiForgeryToken()

            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">Editar Usuario</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" name="Cedula" id="editCedula" />

                <label class="fw-bold">Nombre Completo</label>
                <input name="NombreCompleto" id="editNombre" class="form-control mb-3" required />

                <label class="fw-bold">Email</label>
                <input name="Email" id="editEmail" type="email" class="form-control mb-3" required />

                <label class="fw-bold">Rol</label>
                <select name="RolId" id="editRol" class="form-select mb-3" onchange="toggleEditPassword(this.value)">
                    <option value="2">Votante</option>
                    <option value="3">Jefe de Junta</option>
                    <option value="1">Administrador</option>
                </select>

                <label class="fw-bold">Junta (opcional)</label>
                <select name="JuntaId" id="editJunta" class="form-select mb-3">
                    <option value="">Sin asignar</option>
                    @foreach (var j in juntas.OrderBy(x => x.Id))
                    {
                        <option value="@j.Id">
                            Junta @j.Id - Mesa @j.NumeroMesa - @j.Ubicacion
                        </option>
                    }
                </select>

                <label class="fw-bold">Foto URL</label>
                <input name="FotoUrl" id="editFoto" class="form-control mb-3" />

                <label class="fw-bold">Nueva contraseña (opcional)</label>
                <input name="Password" id="editPass" type="password" class="form-control" disabled />
            </div>

            <div class="modal-footer">
                <button type="submit" class="btn btn-info text-white w-100">Guardar cambios</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword(rol) {
            const pass = document.getElementById("passInput");
            const requiere = (rol === "1" || rol === "3");
            pass.disabled = !requiere;
            pass.required = requiere;
            if (!requiere) pass.value = "";
        }

        function filtrarTabla() {
            const q = document.getElementById("buscador").value.toLowerCase().trim();
            const filas = document.querySelectorAll(".fila-usuario");

            filas.forEach(f => {
                const ced = f.querySelector(".col-cedula").innerText.toLowerCase();
                const nom = f.querySelector(".col-nombre").innerText.toLowerCase();
                f.style.display = (ced.includes(q) || nom.includes(q)) ? "" : "none";
            });
        }

        function abrirEditar(ced, nombre, email, rol, junta, foto) {
            document.getElementById("editCedula").value = ced;
            document.getElementById("editNombre").value = nombre || "";
            document.getElementById("editEmail").value = email || "";
            document.getElementById("editRol").value = rol;
            document.getElementById("editJunta").value = junta || "";
            document.getElementById("editFoto").value = foto || "";

            toggleEditPassword(rol);

            new bootstrap.Modal(document.getElementById("modalEditar")).show();
        }

        function toggleEditPassword(rol) {
            const pass = document.getElementById("editPass");
            const requiere = (rol === "1" || rol === "3");
            pass.disabled = !requiere;
            pass.required = false;
            if (!requiere) pass.value = "";
        }
    </script>
}
