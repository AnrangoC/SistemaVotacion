@model IEnumerable<SistemaVotoModelos.Candidato>

@{
    ViewData["Title"] = "Gestión de Candidatos";
    var eleccion = ViewBag.Eleccion as SistemaVotoModelos.Eleccion;
    var listas = ViewBag.Listas as List<SistemaVotoModelos.Lista> ?? new List<SistemaVotoModelos.Lista>();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h3 class="fw-bold mb-0">🎖️ Gestión de Candidatos</h3>
        <small class="text-muted">
            Elección:
            <span class="fw-semibold">@((eleccion != null) ? eleccion.Titulo : "N/D")</span>
            @if (eleccion != null)
            {
                <span class="ms-2 badge @(eleccion.Estado == "CONFIGURACION" ? "bg-warning text-dark" : eleccion.Estado == "ACTIVA" ? "bg-success" : "bg-secondary")">
                    @eleccion.Estado
                </span>
            }
        </small>
    </div>

    <div class="d-flex gap-2">
        <a asp-controller="Admin" asp-action="GestionElecciones" class="btn btn-outline-dark">
            <i class="bi bi-arrow-left"></i> Volver
        </a>

        <button class="btn btn-dark"
                data-bs-toggle="modal"
                data-bs-target="#modalNuevo"
                @(eleccion != null && eleccion.Estado != "CONFIGURACION" ? "disabled" : "")>
            <i class="bi bi-plus-circle"></i> Nuevo Candidato
        </button>
    </div>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Cédula</th>
                        <th>Nombre</th>
                        <th>Lista</th>
                        <th>Rol Postulante</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                No hay candidatos registrados para esta elección.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var c in Model)
                        {
                            <tr>
                                <td>@c.Id</td>
                                <td>@c.Cedula</td>
                                <td>@(c.Votante?.NombreCompleto ?? "-")</td>
                                <td>
                                    <span class="badge bg-info text-dark">
                                        @(c.Lista?.NombreLista ?? $"Lista #{c.ListaId}")
                                    </span>
                                </td>
                                <td class="fw-semibold">@c.RolPostulante</td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <button class="btn btn-outline-primary btn-sm"
                                                onclick="abrirEditar(@c.Id, @c.EleccionId, @c.ListaId, '@(c.RolPostulante?.Replace("'", "\\'"))')"
                                                @(eleccion != null && eleccion.Estado != "CONFIGURACION" ? "disabled" : "")>
                                            <i class="bi bi-pencil"></i>
                                        </button>

                                        <form asp-controller="Admin" asp-action="EliminarCandidato" method="post"
                                              onsubmit="return confirm('¿Eliminar este candidato de la elección?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@c.Id" />
                                            <input type="hidden" name="eleccionId" value="@c.EleccionId" />
                                            <button class="btn btn-outline-danger btn-sm"
                                                    @(eleccion != null && eleccion.Estado != "CONFIGURACION" ? "disabled" : "")>
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        @if (eleccion != null && eleccion.Estado != "CONFIGURACION")
        {
            <div class="alert alert-warning mt-3 mb-0">
                <i class="bi bi-exclamation-triangle"></i>
                Esta elección no está en <b>CONFIGURACION</b>. Por seguridad, no se permite crear/editar/eliminar candidatos.
            </div>
        }
    </div>
</div>

<!-- MODAL NUEVO -->
<div class="modal fade" id="modalNuevo" tabindex="-1">
    <div class="modal-dialog">
        <form asp-controller="Admin" asp-action="CrearCandidato" method="post" class="modal-content">
            @Html.AntiForgeryToken()
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title">Nuevo Candidato</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" name="EleccionId" value="@(eleccion?.Id ?? 0)" />

                <label class="fw-bold">Cédula</label>
                <input name="Cedula" class="form-control mb-3" maxlength="10" required placeholder="0102030405" />

                <label class="fw-bold">Lista</label>
                <select name="ListaId" class="form-select mb-3" required>
                    <option value="">-- Selecciona una lista --</option>
                    @foreach (var l in listas)
                    {
                        <option value="@l.Id">@l.NombreLista</option>
                    }
                </select>

                <label class="fw-bold">Rol Postulante</label>
                <input name="RolPostulante" class="form-control" required placeholder="Ej: Presidente / Alcalde / etc." />
            </div>

            <div class="modal-footer">
                <button class="btn btn-dark w-100" type="submit">Guardar</button>
            </div>
        </form>
    </div>
</div>

<!-- MODAL EDITAR -->
<div class="modal fade" id="modalEditar" tabindex="-1">
    <div class="modal-dialog">
        <form asp-controller="Admin" asp-action="EditarCandidato" method="post" class="modal-content">
            @Html.AntiForgeryToken()
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Editar Candidato</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" name="id" id="editId" />
                <input type="hidden" name="eleccionId" id="editEleccionId" />

                <label class="fw-bold">Lista</label>
                <select name="listaId" id="editListaId" class="form-select mb-3" required>
                    <option value="">-- Selecciona una lista --</option>
                    @foreach (var l in listas)
                    {
                        <option value="@l.Id">@l.NombreLista</option>
                    }
                </select>

                <label class="fw-bold">Rol Postulante</label>
                <input name="rolPostulante" id="editRol" class="form-control" required />
            </div>

            <div class="modal-footer">
                <button class="btn btn-primary w-100" type="submit">Actualizar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function abrirEditar(id, eleccionId, listaId, rolPostulante) {
            document.getElementById("editId").value = id;
            document.getElementById("editEleccionId").value = eleccionId;
            document.getElementById("editListaId").value = listaId;
            document.getElementById("editRol").value = rolPostulante;

            new bootstrap.Modal(document.getElementById("modalEditar")).show();
        }
    </script>
}
