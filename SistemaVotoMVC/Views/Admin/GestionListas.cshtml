@model IEnumerable<SistemaVotoModelos.Lista>

@{
    ViewData["Title"] = "Gestión de Listas";

    var eleccion = ViewBag.Eleccion as SistemaVotoModelos.Eleccion;
    int eleccionId = eleccion?.Id ?? 0;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h3 class="mb-0">📌 Listas de la elección</h3>
        <div class="text-muted">
            <strong>@(eleccion?.Titulo ?? "Elección")</strong>
            —
            <span class="badge @(eleccion?.Estado == "CONFIGURACION" ? "bg-warning text-dark" :
                                                                    eleccion?.Estado == "ACTIVA" ? "bg-success" : "bg-secondary")">
                @(eleccion?.Estado ?? "-")
            </span>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="GestionElecciones" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>

        <button class="btn btn-primary"
                data-bs-toggle="modal"
                data-bs-target="#modalNuevaLista"
                @(eleccion != null && eleccion.Estado != "CONFIGURACION" ? "disabled" : "")>
            <i class="bi bi-plus-circle"></i> Nueva lista
        </button>
    </div>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th style="width:90px;">Id</th>
                        <th>Nombre</th>
                        <th style="width:120px;">Logo</th>
                        <th style="width:200px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                No hay listas registradas para esta elección.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var l in Model)
                        {
                            <tr>
                                <td>@l.Id</td>
                                <td>@l.NombreLista</td>

                                <td>
                                    @if (!string.IsNullOrWhiteSpace(l.LogoUrl))
                                    {
                                        <a href="@l.LogoUrl" target="_blank" title="Abrir logo en otra pestaña">
                                            <img src="@l.LogoUrl"
                                                 alt="Logo"
                                                 style="width:60px;height:60px;object-fit:contain;"
                                                 onerror="this.style.display='none';" />
                                        </a>

                                        <div class="small text-muted mt-1">
                                            <a href="@l.LogoUrl" target="_blank">Abrir</a>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin logo</span>
                                    }
                                </td>

                                <td class="d-flex gap-2">
                                    <button class="btn btn-info btn-sm text-white"
                                            onclick="abrirEditar('@l.Id','@Html.Raw(l.NombreLista.Replace("'", "\\'"))','@Html.Raw((l.LogoUrl ?? "").Replace("'", "\\'"))')"
                                            @(eleccion != null && eleccion.Estado != "CONFIGURACION" ? "disabled" : "")>
                                        <i class="bi bi-pencil"></i>
                                    </button>

                                    <form asp-action="EliminarLista" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@l.Id" />
                                        <input type="hidden" name="eleccionId" value="@eleccionId" />
                                        <button class="btn btn-outline-danger btn-sm"
                                                onclick="return confirm('¿Eliminar esta lista?')"
                                                @(eleccion != null && eleccion.Estado != "CONFIGURACION" ? "disabled" : "")>
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- MODAL NUEVA LISTA -->
<div class="modal fade" id="modalNuevaLista" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="CrearLista" method="post" class="modal-content">
            @Html.AntiForgeryToken()

            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Nueva lista</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" name="eleccionId" value="@eleccionId" />

                <label class="fw-bold">Nombre</label>
                <input name="nombreLista" class="form-control mb-3" required />

                <label class="fw-bold">Logo URL (opcional)</label>
                <input name="logoUrl" id="logoNuevo" class="form-control"
                       placeholder="https://..."
                       oninput="previewLogo(this.value, 'previewLogoNuevo')" />

                <img id="previewLogoNuevo"
                     class="mt-2"
                     style="width:120px;height:120px;object-fit:contain;display:none;"
                     alt="Preview logo" />
            </div>

            <div class="modal-footer">
                <button class="btn btn-primary w-100" type="submit">Guardar</button>
            </div>
        </form>
    </div>
</div>

<!-- MODAL EDITAR -->
<div class="modal fade" id="modalEditarLista" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="EditarLista" method="post" class="modal-content">
            @Html.AntiForgeryToken()

            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">Editar lista</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" name="Id" id="editId" />
                <input type="hidden" name="eleccionId" value="@eleccionId" />

                <label class="fw-bold">Nombre</label>
                <input name="NombreLista" id="editNombre" class="form-control mb-3" required />

                <label class="fw-bold">Logo URL</label>
                <input name="LogoUrl" id="editLogo" class="form-control"
                       placeholder="https://..."
                       oninput="previewLogo(this.value, 'previewLogoEditar')" />

                <img id="previewLogoEditar"
                     class="mt-2"
                     style="width:120px;height:120px;object-fit:contain;display:none;"
                     alt="Preview logo" />
            </div>

            <div class="modal-footer">
                <button class="btn btn-info text-white w-100" type="submit">Actualizar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function abrirEditar(id, nombre, logo) {
            document.getElementById("editId").value = id;
            document.getElementById("editNombre").value = nombre || "";
            document.getElementById("editLogo").value = logo || "";

            // preview al abrir el modal
            previewLogo(logo || "", "previewLogoEditar");

            new bootstrap.Modal(document.getElementById("modalEditarLista")).show();
        }

        function previewLogo(url, imgId) {
            const img = document.getElementById(imgId);
            if (!img) return;

            if (!url || url.trim() === "") {
                img.style.display = "none";
                img.src = "";
                return;
            }

            img.src = url;
            img.style.display = "";

            img.onerror = () => {
                img.style.display = "none";
                img.src = "";
            };
        }
        // opcional para cuando abrea el modal nuevo, limpia preview
        const modalNueva = document.getElementById("modalNuevaLista");
        if (modalNueva) {
            modalNueva.addEventListener("show.bs.modal", function () {
                const input = document.getElementById("logoNuevo");
                if (input) input.value = "";
                previewLogo("", "previewLogoNuevo");
            });
        }
    </script>
}
