@{
    Layout = null; // Esto elimina definitivamente el menú de la HomePage
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Panel de Administración</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark shadow-sm">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">🛡️ Administración Sistema de Voto</span>
            <div class="text-white">
                <span class="me-3">Bienvenido, <strong>@ViewBag.NombreAdmin</strong></span>
                <a asp-action="Logout" asp-controller="Aut" class="btn btn-sm btn-outline-danger">Cerrar Sesión</a>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0 text-center py-4">
                    <div class="card-body">
                        <i class="bi bi-people-fill display-4 text-primary"></i>
                        <h4 class="mt-3">Votantes</h4>
                        <p class="text-muted">Crear, editar y eliminar ciudadanos.</p>
                        <a asp-action="GestionVotantes" class="btn btn-primary w-100">Administrar Usuarios</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0 text-center py-4">
                    <div class="card-body">
                        <i class="bi bi-person-badge display-4 text-success"></i>
                        <h4 class="mt-3">Candidatos</h4>
                        <a asp-action="GestionCandidatos" class="btn btn-success w-100">Gestionar</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0 text-center py-4">
                    <div class="card-body">
                        <i class="bi bi-check-circle-fill display-4 text-warning"></i>
                        <h4 class="mt-3">Control Juntas</h4>
                        <a asp-action="ValidarJuntas" class="btn btn-warning w-100">Revisar Mesas</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>