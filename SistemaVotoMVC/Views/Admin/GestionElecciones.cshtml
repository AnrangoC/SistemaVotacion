@model IEnumerable<SistemaVotoModelos.Eleccion>

@{
    ViewData["Title"] = "Gestión de Elecciones";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h3 class="fw-bold mb-0">🗳️ Gestión de Elecciones</h3>
        <small class="text-muted">El estado se calcula automáticamente según fecha y hora.</small>
    </div>

    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalNueva">
        <i class="bi bi-plus-circle"></i> Nueva Elección
    </button>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th>Inicio</th>
                        <th>Fin</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        string badge = e.Estado == "ACTIVA" ? "bg-success"
                        : e.Estado == "FINALIZADA" ? "bg-secondary"
                        : "bg-warning text-dark";

                        <tr>
                            <td>@e.Id</td>
                            <td class="fw-semibold">@e.Titulo</td>
                            <td>@e.FechaInicio.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@e.FechaFin.ToString("yyyy-MM-dd HH:mm")</td>
                            <td><span class="badge @badge">@e.Estado</span></td>

                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <button class="btn btn-outline-primary btn-sm"
                                            type="button"
                                            data-id="@e.Id"
                                            data-titulo="@e.Titulo"
                                            data-inicio="@e.FechaInicio.ToString("yyyy-MM-ddTHH:mm")"
                                            data-fin="@e.FechaFin.ToString("yyyy-MM-ddTHH:mm")"
                                            onclick="abrirEditar(this)">
                                        <i class="bi bi-pencil"></i> Editar
                                    </button>

                                    <a class="btn btn-outline-success btn-sm"
                                       asp-controller="Admin"
                                       asp-action="GestionListas"
                                       asp-route-eleccionId="@e.Id">
                                        <i class="bi bi-card-list"></i> Listas
                                    </a>

                                    <a class="btn btn-outline-dark btn-sm"
                                       asp-controller="Admin"
                                       asp-action="GestionCandidatos"
                                       asp-route-eleccionId="@e.Id">
                                        <i class="bi bi-person-badge"></i> Candidatos
                                    </a>

                                    <form asp-controller="Admin"
                                          asp-action="EliminarEleccion"
                                          method="post"
                                          onsubmit="return confirm('¿Eliminar esta elección?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@e.Id" />
                                        <button class="btn btn-outline-danger btn-sm" type="submit" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>

                                    <form asp-controller="Admin"
                                          asp-action="EliminarEleccionForzada"
                                          method="post"
                                          onsubmit="return confirm('Esta acción eliminará juntas, listas, candidatos y votos asociados.\n\n¿Eliminar la elección de todas formas?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@e.Id" />
                                        <button class="btn btn-danger btn-sm" type="submit" title="Eliminar de todas formas">
                                            <i class="bi bi-exclamation-triangle"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="modalNueva" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-controller="Admin" asp-action="CrearEleccion" method="post" class="modal-content">
            @Html.AntiForgeryToken()
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Nueva Elección</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <label class="fw-bold">Título</label>
                <input name="Titulo" class="form-control mb-3" required />

                <label class="fw-bold">Fecha y hora de inicio</label>
                <input name="FechaInicio" type="datetime-local" class="form-control mb-3" required />

                <label class="fw-bold">Fecha y hora de fin</label>
                <input name="FechaFin" type="datetime-local" class="form-control" required />

                <small class="text-muted d-block mt-2">
                    El estado se define automáticamente.
                </small>
            </div>

            <div class="modal-footer">
                <button class="btn btn-success w-100" type="submit">Guardar</button>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="modalEditar" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-controller="Admin" asp-action="EditarEleccion" method="post" class="modal-content">
            @Html.AntiForgeryToken()

            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Editar Elección</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" name="Id" id="editId" />

                <label class="fw-bold">Título</label>
                <input name="Titulo" id="editTitulo" class="form-control mb-3" required />

                <label class="fw-bold">Fecha y hora de inicio</label>
                <input name="FechaInicio" id="editInicio" type="datetime-local" class="form-control mb-3" required />

                <label class="fw-bold">Fecha y hora de fin</label>
                <input name="FechaFin" id="editFin" type="datetime-local" class="form-control" required />

                <small class="text-muted d-block mt-2">
                    El estado se recalcula automáticamente.
                </small>
            </div>

            <div class="modal-footer">
                <button class="btn btn-primary w-100" type="submit">Actualizar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function abrirEditar(btn) {
            const id = btn.getAttribute("data-id");
            const titulo = btn.getAttribute("data-titulo");
            const inicio = btn.getAttribute("data-inicio");
            const fin = btn.getAttribute("data-fin");

            document.getElementById("editId").value = id;
            document.getElementById("editTitulo").value = titulo;
            document.getElementById("editInicio").value = inicio;
            document.getElementById("editFin").value = fin;

            new bootstrap.Modal(document.getElementById("modalEditar")).show();
        }
    </script>
}
