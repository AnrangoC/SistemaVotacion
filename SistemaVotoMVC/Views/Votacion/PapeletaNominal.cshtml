@model SistemaVotoMVC.Controllers.PapeletaNominalVm

@{
    ViewData["Title"] = "Papeleta Nominal";
}

<div class="container mt-4" style="max-width:1000px;">

    <h3 class="fw-bold mb-1">Papeleta virtual (Nominal)</h3>
    <div class="text-muted mb-3">
        Elección: <b>@Model.TituloEleccion</b>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body">

            <form asp-action="EmitirNominal" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" name="Cedula" value="@Model.Cedula" />
                <input type="hidden" name="Token" value="@Model.Token" />
                <input type="hidden" name="EleccionId" value="@Model.EleccionId" />
                <input type="hidden" name="TituloEleccion" value="@Model.TituloEleccion" />

                <!-- SECCIONES POR ROL -->
                @foreach (var rol in Model.Roles)
                {
                    <div class="mb-4">
                        <h5 class="fw-bold text-primary border-bottom pb-2">
                            @rol
                        </h5>

                        <div class="row g-3">

                            <!-- VOTO EN BLANCO -->
                            <div class="col-md-6">
                                <label class="card border-1 h-100 p-3" style="cursor:pointer;">
                                    <div class="d-flex gap-3">
                                        <input type="radio"
                                               name="voto_@rol"
                                               value="0"
                                               checked />

                                        <div class="flex-grow-1">
                                            <div class="fw-bold">Voto en blanco</div>
                                            <div class="text-muted small">No seleccionar candidato</div>
                                        </div>
                                    </div>
                                </label>
                            </div>

                            <!-- CANDIDATOS DEL ROL -->
                            @foreach (var c in Model.Candidatos.Where(x =>
                                                    (x.RolPostulante ?? "").Trim() == rol))
                            {
                                var nombre = c.Votante?.NombreCompleto ?? "Sin nombre";
                                var lista = c.Lista?.NombreLista ?? "";
                                var foto = c.Votante?.FotoUrl ?? "";
                                var logo = c.Lista?.LogoUrl ?? "";

                                <div class="col-md-6">
                                    <label class="card border-1 h-100 p-3" style="cursor:pointer;">
                                        <div class="d-flex gap-3">

                                            <input type="radio"
                                                   name="voto_@rol"
                                                   value="@c.Id" />

                                            <div class="flex-grow-1">

                                                <div class="fw-bold">@nombre</div>
                                                <div class="text-muted small">Lista: @lista</div>

                                                <div class="d-flex align-items-center gap-2 mt-2">

                                                    @if (!string.IsNullOrWhiteSpace(foto))
                                                    {
                                                        <img src="@foto"
                                                             style="width:60px;height:60px;object-fit:cover;border-radius:50%;border:2px solid #eee;" />
                                                    }

                                                    @if (!string.IsNullOrWhiteSpace(logo))
                                                    {
                                                        <img src="@logo"
                                                             style="width:40px;height:40px;object-fit:contain;" />
                                                    }

                                                </div>

                                            </div>
                                        </div>
                                    </label>
                                </div>
                            }

                        </div>
                    </div>
                }

                <hr class="my-4" />

                <!-- BOTON FINAL -->
                <div class="d-flex gap-2">
                    <button type="submit"
                            class="btn btn-success flex-grow-1"
                            onclick="return confirm('¿Confirmar voto completo?');">
                        Confirmar voto
                    </button>
                </div>

                <div class="text-muted small mt-3">
                    Al confirmar, se registran todos los votos y el token queda inválido.
                </div>

            </form>

        </div>
    </div>
</div>
