@{
    ViewData["Title"] = "Resultados de Elecciones";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1><i class="bi bi-check2-square"></i> Conteo de Votos Oficial</h1>
        <p class="text-muted">Filtra por ubicación para ver el avance de los resultados validados.</p>
    </div>

    <div class="card shadow-sm border-0 mb-4 bg-light">
        <div class="card-body">
            <div class="row g-2">
                <div class="col-md-4">
                    <label class="small fw-bold">Provincia</label>
                    <input type="text" id="inProvincia" class="form-control" placeholder="Ej: Guayas">
                </div>
                <div class="col-md-3">
                    <label class="small fw-bold">Cantón</label>
                    <input type="text" id="inCanton" class="form-control" placeholder="Opcional">
                </div>
                <div class="col-md-3">
                    <label class="small fw-bold">Parroquia</label>
                    <input type="text" id="inParroquia" class="form-control" placeholder="Opcional">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button class="btn btn-dark w-100" onclick="actualizarResultados()">Consultar</button>
                </div>
            </div>
        </div>
    </div>

    <div id="contenedor-graficos" class="row">
        <div class="text-center py-5">
            <i class="bi bi-info-circle fs-2 text-secondary"></i>
            <p>Por favor, ingresa una provincia para consultar los datos.</p>
        </div>
    </div>
</div>

<script>
    async function actualizarResultados() {
        const prov = document.getElementById('inProvincia').value;
        const cant = document.getElementById('inCanton').value;
        const parr = document.getElementById('inParroquia').value;

        if (!prov) {
            alert("Debes ingresar al menos la provincia.");
            return;
        }

        const url = `/Resultados/ObtenerDatosFiltrados?provincia=${prov}&canton=${cant}&parroquia=${parr}`;
        const resp = await fetch(url);

        if (!resp.ok) {
            document.getElementById('contenedor-graficos').innerHTML =
                '<div class="alert alert-warning text-center">No se encontraron datos validados para esta zona.</div>';
            return;
        }

        const data = await resp.json();
        const div = document.getElementById('contenedor-graficos');
        div.innerHTML = "";

        if (data.detalle && data.detalle.length > 0) {
            data.detalle.forEach(item => {
                div.innerHTML += `
                    <div class="col-md-6 mb-4">
                        <div class="card h-100 border-0 shadow-sm p-3">
                            <div class="d-flex align-items-center mb-2">
                                <img src="${item.logo || '/img/voto-default.png'}" width="40" height="40" class="me-2 rounded">
                                <h6 class="mb-0">${item.nombreLista}</h6>
                            </div>
                            <div class="d-flex justify-content-between small text-muted mb-1">
                                <span>${item.votos} votos</span>
                                <span class="fw-bold">${item.porcentaje}%</span>
                            </div>
                            <div class="progress" style="height: 15px;">
                                <div class="progress-bar bg-primary" role="progressbar" style="width: ${item.porcentaje}%"></div>
                            </div>
                        </div>
                    </div>`;
            });
        }
    }
</script>